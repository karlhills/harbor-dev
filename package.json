{
  "name": "beacon",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/server",
    "apps/ui"
  ],
  "scripts": {
    "dev": "concurrently -n server,ui -c blue,green \"npm run dev -w apps/server\" \"npm run dev -w apps/ui\"",
    "build": "npm run build -w apps/ui && npm run build -w apps/server",
    "start": "npm run start -w apps/server",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.4.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  }
}
